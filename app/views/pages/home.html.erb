  <div class="banner">
    <div class="container">
      <h1 class="banner-heading">Welcome to Plantopolis</h1>
      <p>Find your perfect green companion</p>
      <%= link_to plants_path, class: 'btn btn-success banner-link' do %>
        <i class="fas fa-eye"></i> Watch the List
      <% end %>
    </div>
  </div>
<div class="container">
  <h2>Recently Added</h2>
  <div class="row">
    <% @plants.each do |plant| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <%= cl_image_tag plant.photo.key, class: "card-img-top" if plant.photo.attached? %>
          <div class="card-body">
            <h2 class="card-title"><%= plant.name %></h2>
            <p class="card-text"><%= plant.description %></p>
            <h3 class="card-text">$<%= plant.price %></h3>
           <%= link_to plant, class: 'btn btn-primary' do %>
             <i class="fas fa-info-circle"></i> More details
           <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
  <div class="footer">
    <h2>Nuestros metodo de pago</h2>
    <ul class="list-inline">
      <li><i class="fa-brands fa-cc-visa"></i></li>
      <li><i class="fa-brands fa-cc-mastercard"></i></li>
      <li><i class="fa-solid fa-credit-card"></i></li>
      <li><i class="fa-brands fa-bitcoin"></i></li>
      <li><i class="fa-solid fa-money-bill"></i></li>
    </ul>
    <h3>@Todos los derechos reservados</h3>
  </div>
