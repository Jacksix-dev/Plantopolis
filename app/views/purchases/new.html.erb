<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body text-center"> <!-- Agregado text-center aquÃ­ -->
          <h2 class="card-title">Create a new purchase</h2>

          <%= simple_form_for([@plant, @purchase]) do |f| %>
            <div class="form-group">
              <%= f.input :user_id, label: false, input_html: {value: current_user.id, class: "d-none form-control"} %>
            </div>
            <div class="form-group">
              <%= f.input :plant_id, label: false, input_html: {value: params[:plant_id], class: "d-none form-control"} %>
            </div>
            <!-- Otros campos del formulario -->

            <p class="card-text"><%= "You are buying " + @plant.name + " for " + @plant.price.to_s %></p>

            <div class="text-center">
              <%= f.submit 'Submit', class: 'btn btn-success' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
