<div class="row">
    <% @plants.each do |plant| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <%= cl_image_tag plant.photo.key, class: "card-img-top" if plant.photo.attached? %>
          <div class="card-body">
            <h2 class="card-title"><%= plant.name %></h2>
            <p class="card-text"><%= plant.description %></p>
            <h3 class="card-text">$<%= plant.price %></h3>
            <%= link_to plant, class: 'btn btn-primary' do %>
             <i class="fas fa-info-circle"></i> More details
            <% end %>
           </div>
        </div>
      </div>
    <% end %>
  </div>
